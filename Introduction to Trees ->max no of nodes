

class Solution {
  public:
    int countNodes(int i) {
        return pow(2, i-1);
    }
};

//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    while (t--) {
        int i;
        cin >> i;
        Solution ob;
        int res = ob.countNodes(i);

        cout << res;
        cout << "\n";
    
cout << "~" << "\n";
}
}

// } Driver Code Ends
